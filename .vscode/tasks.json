{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Auth Browser",
      "type": "npm",
      "script": "dev:auth:browser",
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "VITE",
          "endsPattern": "Local:.*http://localhost:5173"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Build Core",
      "type": "npm",
      "script": "build:core",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Build Auth",
      "type": "npm",
      "script": "build:auth",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Build All",
      "type": "npm",
      "script": "build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Database Up",
      "type": "npm",
      "script": "db:up",
      "problemMatcher": []
    },
    {
      "label": "Database Down",
      "type": "npm",
      "script": "db:down",
      "problemMatcher": []
    },
    {
      "label": "Database Setup (Full)",
      "type": "npm",
      "script": "db:setup",
      "problemMatcher": []
    },
    {
      "label": "Prisma Generate",
      "type": "npm",
      "script": "prisma:generate",
      "problemMatcher": []
    }
  ]
}

