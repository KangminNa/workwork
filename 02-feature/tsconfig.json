{
  "compilerOptions": {
    "target": "es2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["es2022", "dom"],
    "outDir": "../../dist/02-feature",
    "rootDir": "src",
    "composite": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "tsBuildInfoFile": "../../dist/02-feature/.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@core/*": ["../01-core/src/*"]
    }
  },
  "include": ["src"],
  "references": [
    { "path": "../01-core" }
  ]
}
