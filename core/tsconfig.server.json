{
  "extends": "../config/tsconfig.server.json",
  "compilerOptions": {
    "outDir": "../dist/server",
    "baseUrl": "..",
    "rootDir": "..",
    "paths": {
      "@common/*": ["../common/*"]
    }
  },
  "include": [
    "../core/server/**/*.ts",
    "../common/shared/**/*.ts",
    "../login/server/**/*.ts",
    "../login/shared/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "browser",
    "dist"
  ]
}
