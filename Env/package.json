{
  "name": "@workwork/monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Workwork Monorepo - All configurations managed in Env",
  "scripts": {
    "build:core": "tsc --project core/tsconfig.json",
    "build:common": "tsc --project common/tsconfig.json",
    "build:auth": "tsc --project auth/tsconfig.json",
    "build": "npm run build:core && npm run build:common && npm run build:auth",
    "dev:auth:server": "NODE_ENV=development ts-node-dev --respawn --transpile-only --project tsconfig.dev.json auth/server/app.ts",
    "dev:auth:browser": "vite auth/browser",
    "prisma:generate": "cd Env && prisma generate",
    "prisma:migrate": "cd Env && prisma migrate dev",
    "prisma:migrate:deploy": "cd Env && prisma migrate deploy",
    "prisma:studio": "cd Env && prisma studio",
    "prisma:reset": "cd Env && prisma migrate reset",
    "db:up": "docker-compose -f Env/db/docker-compose.yml up -d",
    "db:down": "docker-compose -f Env/db/docker-compose.yml down",
    "db:setup": "npm run db:up && sleep 3 && npm run prisma:migrate"
  },
  "dependencies": {
    "express": "^5.1.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "bullmq": "^5.63.0",
    "ioredis": "^5.8.2",
    "reflect-metadata": "^0.2.2",
    "@prisma/client": "^6.19.0",
    "dotenv": "^17.2.3",
    "glob": "^11.0.3",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "axios": "^1.7.3",
    "bcryptjs": "^2.4.3",
    "react-router-dom": "^6.26.0"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "@types/node": "^24.10.0",
    "@types/express": "^5.0.5",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/glob": "^9.0.0",
    "@vitejs/plugin-react": "^5.1.0",
    "vite": "^7.2.2",
    "prisma": "^6.19.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/react-router-dom": "^5.3.3"
  }
}
