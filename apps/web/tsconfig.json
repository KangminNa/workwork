{
  "compilerOptions": {
    "target": "es2022",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "es2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,

    /* Bundler mode */
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "composite": true,
    "outDir": "../../dist/apps/web",
    "rootDir": "src",
    "tsBuildInfoFile": "../../dist/apps/web/.tsbuildinfo"
  },
  "include": ["src"],
  "references": [
    { "path": "../../03-domain/login/browser" }
  ]
}
