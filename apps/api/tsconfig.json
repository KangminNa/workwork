{
  "compilerOptions": {
    "target": "es2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["es2022"],
    "outDir": "../../dist/apps/api",
    "rootDir": "src",
    "composite": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "tsBuildInfoFile": "../../dist/apps/api/.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@workwork/core/*": ["../../01-core/src/*"],
      "@workwork/core": ["../../01-core/src/index.ts"],
      "@workwork/feature/*": ["../../02-feature/src/*"],
      "@workwork/feature": ["../../02-feature/src/index.ts"],
      "@workwork/domain-login/*": ["../../03-domain/login/*"],
      "@workwork/domain-schedule/*": ["../../03-domain/schedule/*"],
      "@workwork/domain-user/*": ["../../03-domain/user/*"]
    }
  },
  "include": ["src"],
  "references": [
    { "path": "../../01-core" },
    { "path": "../../02-feature" },
    { "path": "../../03-domain/login" },
    { "path": "../../03-domain/schedule" },
    { "path": "../../03-domain/user" }
  ]
}
