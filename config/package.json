{
  "name": "workwork",
  "version": "1.0.0",
  "description": "Modular Express + React Application",
  "private": true,
  "scripts": {
    "dev:server:core": "cd ../core && nodemon --watch 'server/**/*' --watch 'shared/**/*' --ext ts --exec 'ts-node' server/index.ts",
    "dev:server:common": "cd ../common && nodemon --watch 'server/**/*' --watch 'shared/**/*' --ext ts --exec 'ts-node' server/index.ts",
    "dev:client:core": "cd ../core && vite",
    "dev:client:common": "cd ../common && vite",
    "build:server:core": "cd ../core && tsc --project tsconfig.server.json",
    "build:server:common": "cd ../common && tsc --project tsconfig.server.json",
    "build:client:core": "cd ../core && vite build",
    "build:client:common": "cd ../common && vite build",
    "build:server": "npm run build:server:core && npm run build:server:common",
    "build:client": "npm run build:client:core && npm run build:client:common",
    "build": "npm run build:server && npm run build:client",
    "clean": "rm -rf ../dist",
    "lint:core": "cd ../core && eslint . --ext .ts,.tsx",
    "lint:common": "cd ../common && eslint . --ext .ts,.tsx",
    "lint": "npm run lint:core && npm run lint:common"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^6.20.0",
    "axios": "^1.6.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.4",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.7",
    "concurrently": "^8.2.2"
  }
}

