{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDir": "../..",
    "outDir": "../../dist",
    "baseUrl": "../..",
    "paths": {
      "@core/*": [
        "core/*"
      ],
      "@common/*": [
        "common/*"
      ],
      "@auth/*": [
        "auth/*"
      ],
      "@calendar/*": [
        "calendar/*"
      ],
      "@signup/*": [
        "signup/*"
      ],
      "@notification/*": [
        "notification/*"
      ],
      "@config/*": [
        "config/*"
      ]
    }
  }
}