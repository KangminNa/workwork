{
  "extends": "./config/tsconfig.server.json",
  "compilerOptions": {
    "outDir": "./dist/server",
    "baseUrl": ".",
    "paths": {
      "@common/*": ["./common/*"],
      "@core/*": ["./core/*"]
    }
  },
  "include": [
    "core/server/**/*.ts",
    "common/shared/**/*.ts",
    "login/server/**/*.ts",
    "login/shared/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "core/browser",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}

