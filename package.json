{
  "name": "@workwork/monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "Env",
    "core",
    "auth",
    "common"
  ],
  "scripts": {
    "install:all": "npm install",
    "build:core": "npm run build --workspace=@workwork/core",
    "build:common": "npm run build --workspace=@workwork/common",
    "build:auth": "npm run build --workspace=@workwork/auth",
    "build": "npm run build:core && npm run build:common && npm run build:auth",
    "dev:auth:server": "npm run dev:server --workspace=@workwork/auth",
    "dev:auth:browser": "npm run dev:browser --workspace=@workwork/auth",
    "prisma:generate": "cd Env && npx prisma generate",
    "prisma:migrate": "cd Env && npx prisma migrate dev",
    "prisma:studio": "cd Env && npx prisma studio",
    "db:setup": "docker-compose -f Env/db/docker-compose.yml up -d && npm run prisma:migrate"
  },
  "dependencies": {
    "@workwork/env": "file:./Env"
  }
}

