{
  "name": "workwork",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo project with React frontend and NestJS backend",
  "workspaces": [
    "browser",
    "server"
  ],
  "scripts": {
    "dev:browser": "pnpm --filter browser dev",
    "dev:server": "NODE_ENV=development pnpm --filter server start:dev",
    "dev": "concurrently \"pnpm run dev:browser\" \"pnpm run dev:server\"",
    "build:browser": "pnpm --filter browser build",
    "build:server": "pnpm --filter server build",
    "build": "pnpm run build:browser && pnpm run build:server",
    "clean": "pnpm -r --if-present clean",
    "clean:dist": "rm -rf server/dist browser/dist server/*.tsbuildinfo",
    "clean:modules": "rm -rf node_modules server/node_modules browser/node_modules"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "bcrypt",
      "esbuild",
      "@nestjs/core"
    ]
  }
}
