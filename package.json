{
  "name": "workwork",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "auth",
    "auth/browser",
    "base",
    "base/browser"
  ],
  "scripts": {
    "install:all": "npm install --workspace=@workwork/auth --workspace=@workwork/auth-browser --workspace=@workwork/base --workspace=@workwork/base-browser",
    "build:auth-server": "npm run build:server --workspace=@workwork/auth",
    "start:auth-server:dev": "npm run start:server:dev --workspace=@workwork/auth",
    "build:auth-browser": "npm run build:browser --workspace=@workwork/auth",
    "start:auth-browser:dev": "npm run start:browser:dev --workspace=@workwork/auth",
    "build:base-server": "npm run build:server --workspace=@workwork/base",
    "start:base-server:dev": "npm run start:server:dev --workspace=@workwork/base",
    "build:base-browser": "npm run build:browser --workspace=@workwork/base",
    "start:base-browser:dev": "npm run start:browser:dev --workspace=@workwork/base"
  },
  "devDependencies": {
    "typescript": "5.4.5"
  }
}
