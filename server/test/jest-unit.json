{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "../src/**/*.(t|j)s",
    "!../src/main.ts",
    "!../src/**/*.module.ts",
    "!../src/**/*.entity.ts",
    "!../src/**/*.dto.ts"
  ],
  "coverageDirectory": "../coverage/unit",
  "testEnvironment": "node",
  "setupFilesAfterEnv": ["<rootDir>/setup.ts"],
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/../src/$1"
  }
}

